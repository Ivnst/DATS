@model IEnumerable<DATS.Stadium>
@{
    ViewBag.Title = "Стадионы";
    Layout = null;
}

<p>
    <button data-toggle="modal" data-target="#myCreateModal" class="btn btn-primary">Добавить стадион</button>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(p => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(p => item.Address)
                </td>
                <td>
                    <button data-toggle="modal" data-target="#myModal" href="/StadiumSetting/Edit/@item.Id"   class="btn glyphicon glyphicon-pencil"></button>
                    <button data-toggle="modal" data-target="#myModal" href="/StadiumSetting/Delete/@item.Id" class="btn glyphicon glyphicon-trash"></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Create-->
<div class="modal fade" id="myCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Создание стадиона</h4>
      </div>
      <div class="modal-body">
         @{Html.RenderAction("Create", "StadiumSetting");}
      </div>
    </div>
  </div>
</div>


<!-- Modal Edit-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>
