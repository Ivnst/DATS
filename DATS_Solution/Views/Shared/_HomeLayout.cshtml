    (function (d, w, c) {
        (w[c] = w[c] || []).push(function () {
            try {
                w.yaCounter25679033 = new Ya.Metrika({ id: 25679033,
                    clickmap: true,
                    accurateTrackBounce: true,
                    trackHash: true
                });
            } catch (e) { }
        });

        var n = d.getElementsByTagName("script")[0],
