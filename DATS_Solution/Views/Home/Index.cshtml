@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="/Home/Index">DATS!</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li><a href="/Home/Index">Главная</a></li>
      </ul>
      
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">@ViewBag.CurrentStadium.Name <b class="caret"></b></a>
          <ul class="dropdown-menu">
            @foreach(DATS.Stadium stadium in ViewBag.Stadiums)
            {
               <li><a href="/Home/Stadium?sid=@stadium.Id">@stadium.Name</a></li>  
            }
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Мероприятия <b class="caret"></b></a>
          <ul class="dropdown-menu">
            @foreach(DATS.Match match in ViewBag.Matches)
            {
               <li><a href="/Home/Match?mid=@match.Id">@match.Name</a></li>  
            }
          </ul>
        </li>

      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="/Settings/Index">Настройки</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div>
  <div class="container bs-docs-container">
    <div class="bs-docs-section">
      <h1 class="page-header">@ViewBag.CurrentMatch.Name</h1>
      <ul class="list-inline">
        <li><h4>Дата проведения: @ViewBag.CurrentMatch.BeginsAt</h4></li>
        <li><h4>Продолжительность: @ViewBag.CurrentMatch.Duration минут.</h4></li>
      </ul>
    </div>

    <div class="row">

      <div class="col-md-7">
       <img class="img-responsive" src="@ViewBag.CurrentStadium.SchemePath" />
      </div>

      <div class="col-md-5">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-center active">Сектор</td>
              <td class="text-center warning">Всего</td>
              <td class="text-center danger">Куплено</td>
              <td class="text-center info">Бронь</td>
              <td class="text-center success">Свободно</td>
            </tr>
          </thead>
          <tbody>
          @foreach (DATS.SectorView sv in ViewBag.SectorsInfo)
          {
            <tr onclick="window.document.location='/Home/EditSector?sid=@sv.SectorId';">
              <td class="text-center active">@sv.Name</td>
              <td class="text-center warning">@sv.TotalPlaces</td>
              <td class="text-center danger">@sv.SoldPlaces</td>
              <td class="text-center info">@sv.ReservedPlaces</td>
              <td class="text-center success">@sv.FreePlaces</td>
            </tr>
          }
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
