@model DATS.Match

@{
    ViewBag.Title = "Справочник мероприятий: Удаление";
    Layout = "~/Views/Shared/_SettingLayout.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel2">
        Удаление мероприятия
    </h4>
</div>

<div class="modal-body">
    <fieldset>

        <div class="display-label"><b>
            @Html.DisplayNameFor(model => model.Name)
        </b></div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Name)
        </div>

        <div class="display-label"><b>
            @Html.DisplayNameFor(model => model.BeginsAt)
        </b></div>
        <div class="display-field">
            @Html.DisplayFor(model => model.BeginsAt)
        </div>

        <div class="display-label"><b>
            @Html.DisplayNameFor(model => model.Duration)
        </b></div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Duration)
        </div>
        
    </fieldset>
</div>


    @using (Html.BeginForm())
    {
               @Html.HiddenFor(model => model.StadiumId)
        
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Закрыть</button>
        <input type="submit" class="btn btn-danger" value="Удалить" />
    </div>
    }
